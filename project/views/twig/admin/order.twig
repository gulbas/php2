<h1>Управление заказами</h1>

<table class="table table-striped mt-5">
    <thead>
    <tr>
        <th scope="col">Номер заказа</th>
        <th scope="col">Дата создания</th>
        <th scope="col">Кто создал</th>
        <th scope="col">Статус</th>
    </tr>
    </thead>
    <tbody>
    {% for order in orders %}
        <tr>
            <th scope="row">{{ order.id }}</th>
            <td>{{ order.created_at }}</td>
            <td>{{ order.users_name }}</td>
            {% if order.status == 0 %}
                <td><a class="status" data-id="{{ order.id }}" href="#">Обрабатывается</a></td>
            {% else %}
                <td><a class="status" data-id="{{ order.id }}" href="#">Отправлен</a></td>
            {% endif %}
        </tr>
    {% endfor %}
    </tbody>
</table>