<h1>Войти в систему</h1>

{% if (error) %}
    <div class="alert alert-danger" role="alert">
        {{ error }}
    </div>
{% endif %}

<div class="mt-5">
    <form method="post">
        <div class="form-group">
            <label for="login">Login</label>
            <input name="login" type="text" class="form-control" id="login" placeholder="Enter login">
        </div>
        <div class="form-group">
            <label for="password">Пароль</label>
            <input name="password" type="password" class="form-control" id="password"
                   placeholder="Password">
        </div>
        <div class="form-group form-check">
            <input name="remember" type="checkbox" class="form-check-input" id="remember">
            <label class="form-check-label" for="remember">Запомнить меня</label>
        </div>
        <button type="submit" name="login_user" class="btn btn-primary">Вход</button>
        <a href="/user/register" class="btn btn-success">Регистрация</a>
    </form>
</div>