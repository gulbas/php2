<h1>Ваши заказы</h1>
{% if orders|length > 0 %}
    <table class="table table-striped mt-5">
        <thead>
        <tr>
            <th scope="col">Номер заказа</th>
            <th scope="col">Дата создания</th>
            <th scope="col">Статус</th>
        </tr>
        </thead>
        <tbody>
        {% for item in orders %}
            <tr class="href" onclick="window.location.href='view/?id={{ item.id }}'">
                <th scope="row">{{ item.id }}</th>
                <td>{{ item.created_at }}</td>
                {% if item.status == 0 %}
                    <td>Обрабатывается</td>
                {% else %}
                    <td>Отправлен</td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    <div class="my-5">
        <em>Вы еще ничего не заказали? :(</em>
    </div>
{% endif %}